/* Blueterm Textual CSS Styling */
/* IBM Carbon Design System colors applied via textual-dark base theme */

/* App layout - horizontal split */
#app_layout {
    layout: horizontal;
    height: 100%;
}

/* Resource type selector - left sidebar */
#resource_type_selector {
    width: 20;
    height: 100%;
    background: $surface;
    border-right: solid $primary;
}

#resource_type_panel {
    height: 100%;
    padding: 1;
}

#resource_type_title {
    height: auto;
    text-align: center;
    margin-bottom: 2;
    border-bottom: solid $primary;
    padding-bottom: 1;
}

#resource_type_list {
    height: auto;
    padding: 0;
}

/* Main container layout */
#main_container {
    layout: vertical;
    height: 100%;
    width: 1fr;
}

/* Region selector - TAWS style (no dock, part of main flow) */
#region_selector {
    height: auto;
    background: $surface;
    border: solid $primary;
    padding: 0;
    margin-bottom: 0;
}

#region_panel {
    height: auto;
    background: $surface;
    padding: 0 1;
}

#region_info_bar {
    height: 1;
    background: $surface;
    color: $text-muted;
}

#profile_label, #region_label, #resource_label, #instances_label {
    color: $text-muted;
    width: auto;
}

#profile_value, #current_region, #resource_value, #instances_count {
    color: $text;
    text-style: bold;
    width: auto;
}

#current_region {
    color: $success;
}

#instances_count {
    color: $accent;
}

#region_list {
    height: auto;
    background: $surface;
    color: $text;
    padding: 0;
}

/* Inline Resource Group in Region Info Bar */
#rg_label_inline {
    color: $text-muted;
    width: auto;
}

#current_resource_group_inline {
    color: $success;
    text-style: bold;
    width: auto;
}

#change_rg_button_inline {
    margin-left: 1;
    min-width: 8;
    height: 1;
}

/* Inline Theme Selector in Region Info Bar */
#theme_label_inline {
    color: $text-muted;
    width: auto;
}

#current_theme_inline {
    color: $accent;
    text-style: bold;
    width: auto;
}

#change_theme_button_inline {
    margin-left: 1;
    min-width: 8;
    height: 1;
}


/* Instance table */
#instance_table {
    height: 1fr;
    border: solid $primary;
    margin: 1 0;
}

#instance_table > .datatable--header {
    background: $primary-darken-2;
    color: $text;
    text-style: bold;
}

#instance_table > .datatable--cursor {
    background: $accent;
}

/* Search input */
#search_input {
    height: 3;
    dock: bottom;
    border: solid $accent;
    padding: 0 1;
}

#search_input.hidden {
    display: none;
}

#search_container {
    layout: horizontal;
    height: 100%;
    align-vertical: middle;
}

#search_label {
    width: auto;
    margin-right: 1;
    color: $accent;
}

#search_field {
    width: 1fr;
}

#search_field:focus {
    border: solid $success;
}

/* Status bar */
#status_bar {
    height: 1;
    dock: bottom;
    background: $panel;
    padding: 0 2;
}

#status_text {
    width: 100%;
    height: 100%;
    content-align: left middle;
}

/* Modal screens */
Screen {
    align: center middle;
}

ModalScreen {
    background: rgba(0, 0, 0, 0.5);
}

/* Error dialog */
#error_dialog {
    width: 60;
    height: auto;
    max-height: 80%;
    background: $surface;
    border: heavy $error;
    padding: 1 2;
}

#error_content {
    layout: vertical;
    height: auto;
}

#error_title {
    text-style: bold;
    color: $error;
    margin-bottom: 1;
}

#error_message {
    margin-bottom: 1;
    color: $text;
}

#error_suggestion {
    margin-bottom: 1;
    color: $warning;
}

#error_buttons {
    layout: horizontal;
    height: auto;
    align-horizontal: center;
}

/* Confirmation dialog */
#confirm_dialog {
    width: 50;
    height: auto;
    background: $surface;
    border: heavy $warning;
    padding: 1 2;
}

#confirm_content {
    layout: vertical;
    height: auto;
}

#confirm_title {
    text-style: bold;
    color: $warning;
    margin-bottom: 1;
}

#confirm_message {
    margin-bottom: 1;
    color: $text;
}

#confirm_buttons {
    layout: horizontal;
    height: auto;
    align-horizontal: center;
    margin-top: 1;
}

#confirm_buttons Button {
    margin: 0 1;
}

/* Detail dialog */
#detail_dialog {
    width: 80%;
    height: 80%;
    background: $surface;
    border: heavy $primary;
    padding: 1 2;
}

#detail_header {
    height: auto;
    padding: 0 0 1 0;
    margin-bottom: 1;
    border-bottom: solid $primary;
}

#detail_close_hint {
    text-align: right;
    color: $text-muted;
    width: 1fr;
}

#detail_content {
    layout: vertical;
    height: 100%;
}

#detail_title {
    text-style: bold;
    color: $primary;
    margin-bottom: 1;
}

#detail_scroll {
    height: 1fr;
    border: solid $primary-darken-1;
    margin-bottom: 1;
}

#detail_info {
    padding: 1;
}

#detail_buttons {
    layout: horizontal;
    height: auto;
    align-horizontal: center;
}

/* Button styling */
Button {
    min-width: 12;
}

Button:hover {
    text-style: bold;
}

Button.success {
    background: $success;
}

Button.error {
    background: $error;
}

/* Info Bar - top display */
#info_bar {
    height: 1;
    background: $panel;
    border-bottom: solid $primary;
    width: 100%;
}

#info_bar_text {
    height: 1;
    padding-left: 2;
    background: $panel;
}

/* Header and Footer */
Header {
    background: $primary;
    color: $text;
}

Footer {
    background: $panel;
}
